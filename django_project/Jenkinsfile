        //     }
        // }        

        stage('Deploy App on k8s') {
          steps {
            withCredentials([
                string(credentialsId: 'my_kubernetes', variable: 'api_token')
               
            ]) {
              sh 'kubectl --token $api_token apply -f django_project/deployment.yml' 
            }
          }
        }


    }

}

